@using InterviewTest.Models
@model FinalResult

@{
    ViewBag.Title = "Hotels Web Service";
    Layout = "~/Views/_Layout.cshtml";
}

<p>@Html.ActionLink("< Back", "Index")</p>

<p>
    Please display the Hotel Name, Airport Code, and Address for the hotel with the ID of 105304 using this web service:
    <br />
    <a href="http://ws-design.idevdesign.net/hotels.asmx?op=GetHotel">http://ws-design.idevdesign.net/hotels.asmx?op=GetHotel</a>
</p>


<p>
    This link gives more details related to this web service:
    <br />
    <a href="http://ws-design.idevdesign.net/docs/hotels.html">http://ws-design.idevdesign.net/docs/hotels.html</a>
</p>

<p>
    You will need the following credentials to access the web service:<br />
    <br />
    <strong>Login</strong>: aeTraining<br />
    <strong>Password</strong>: ZZZ
</p>

<table cellpadding="25" cellspacing="25" border="1" align="center">
    <thead>
        <tr>
            <td><strong>Hotel Name</strong></td>
            <td><strong>Airport Name</strong></td>
            <td><strong>Address</strong></td>
        </tr>
    </thead>
    <tbody>
        <tr>
            @{
                var hotelResult = (FinalResult)ViewData["HotelResult"];
                <td>@hotelResult.resultName</td>
                <td>@hotelResult.resultAirportCode</td>
                <td>@hotelResult.resultAddress</td>
            }
        </tr>
    </tbody>
</table>